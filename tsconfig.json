{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "strict": true,
    "skipLibCheck": true,

    "sourceMap": true,

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "types": ["node", "playwright"],

    "resolveJsonModule": true,

    "verbatimModuleSyntax": false,
    "isolatedModules": false
  }
}
